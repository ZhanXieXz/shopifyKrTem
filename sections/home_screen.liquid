                                        <div>{{bk_stts.rich_text}}</div>
                                    {% else %}
                                        {% assign sec_blk = section.blocks[0].settings %}
                                        <div style="height: 100%;" class="image_style_{{sec_blk.image_style}}">
                                            {% for item in imgArr limit:  sec_blk.image_style %}
                                                {% assign url = sec_blk[collectionArr[forloop.index0]] %}
                                                {% assign image = sec_blk[imgArr[forloop.index0]] %}
                                                {% assign ratio = image.aspect_ratio |default:1.0 %}
