                                    {% assign image = bk_stts[imgArr[forloop.index0]] %}
                                    {% assign borderTop = bk_stts[borderTopArr[forloop.index0]] %}
                                    {% assign borderBottom = bk_stts[borderBottomArr[forloop.index0]] %}
                                    {% assign borderLeft = bk_stts[borderLeftArr[forloop.index0]] %}
                                    {% assign borderRight = bk_stts[borderRightArr[forloop.index0]] %}
                                    
