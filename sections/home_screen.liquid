<script>

    $(document).ready(function() {
        let isApple = /macintosh|mac os x/i.test(navigator.userAgent); 
        $('.category-item .c_name').css('letter-spacing', isApple ? '-0.5px' : '0')
        $('.registration_wrap a').css({'line-height': isApple ? '30px' : 'auto', height: isApple ? '30px' : 'auto'})
        $('.category-item span').css('line-height', isApple ? '1.4' : '1.5')
        let currentIndex = 0;
        let total = $('.category-item-wrap:last').attr('data-index');

        ;(function init() {
            $(`.category-item-wrap:first`).addClass('active')
            $(`.transform_item:first`).addClass('active')
            $(`.category-bg:first`).addClass('active')
            $('.wrap_2:first').css('margin-top', '14px')
        })()

        function resetStyle(className) {
            const elArr = $(className)
            elArr.map((ind, item) => {
                $(item).removeClass('active')
            })
        }

        $('.category-item-wrap').mouseenter(function () {
            let index = $(this).attr('data-index');
            currentIndex = index;
            resetStyle('.category-item-wrap')
            resetStyle('.transform_item')
            resetStyle('.category-bg')
            $(this).addClass('active')
            $(`.transform_item:eq(${currentIndex})`).addClass('active')
            $(`.category-bg:eq(${currentIndex})`).addClass('active')
            if (`{{isAutoLoop}}` == true) {
                window.clearInterval(timer);
            }
        })

        $('.category-list').mouseleave(function () {
            if (`{{isAutoLoop}}` == true) {
                setTimer();
            }
        })

        function setTimer() {
            let interval = `{{TimeInterval}}` * 1000
            timer = setInterval(() => {
                if (currentIndex > total) {
                    currentIndex = 0
                }
                console.log(currentIndex)
                resetStyle('.category-item-wrap')
                resetStyle('.transform_item')
                resetStyle('.category-bg')
                $(`.category-item-wrap:eq(${currentIndex})`).addClass('active')
                $(`.transform_item:eq(${currentIndex})`).addClass('active')
                $(`.category-bg:eq(${currentIndex})`).addClass('active')
                currentIndex++;
            }, interval);
        }
        if (`{{isAutoLoop}}` == true) {
            setTimer(); 
        }
    })
    // $(window).resize(function () { 
    //     const $height = $('.home-content').height() / 2
    //     console.log($height);
    //     console.log($('.home-content').height());
    //     $('.right').width($height + 'px')
    //     })
    let timer = null
    function resizeWindow () {
        const $height = $('.home-content').height() / 2
        // console.log($height);
        // console.log($('.home-content').height());
        $('.right').width($height + 'px')
        $('.left').css('width', `calc(100% - ${$height}px)`)
        clearTimeout(timer)
        timer = setTimeout(() => {
            resizeWindow()
        }, 500);
    }
    resizeWindow()
</script>

