                        "contain": 1,
                        "groupCells": "100%",
                        "dragThreshold" : 5,
                        "cellAlign": "left",
                        "wrapAround": {{section.settings.loop}},
                        "prevNextButtons": {{section.settings.button}},
                        "percentPosition": 1,
                        "pageDots": {{section.settings.dot}},
